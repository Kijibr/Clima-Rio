{
  "expo": {
    "name": "Clima-Rio",
    "slug": "Clima-Rio",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./src/assets/sun.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./src/assets/sun.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      }
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow Clima-Rio to use your location."
        }
      ]
    ]
  }
}
